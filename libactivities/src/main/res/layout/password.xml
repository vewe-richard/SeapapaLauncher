<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="6" >

    <TextView
        android:id="@+id/password_input_hint"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		/>

    <TextView
        android:id="@+id/password_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:gravity="center_horizontal"
		android:textSize="@dimen/numbetTextSize"/>


	<TableLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="4"
	    android:weightSum="4" >
	
	    <TableRow
	        android:id="@+id/tableRow1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:weightSum="3" >
	
	        <Button
	            android:id="@+id/number1Btn"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:text="1"
	            android:textSize="@dimen/numbetTextSize" />
	
	        <Button
	            android:id="@+id/number2Btn"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:text="2"
	            android:textSize="@dimen/numbetTextSize" />
	
	        <Button
	            android:id="@+id/number3Btn"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:text="3"
	            android:textSize="@dimen/numbetTextSize" />
	
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:weightSum="3" >
	
	        <Button
	            android:id="@+id/number4Btn"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:text="4"
	            android:textSize="@dimen/numbetTextSize" />
	
	        <Button
	            android:id="@+id/number5Btn"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:text="5"
	            android:textSize="@dimen/numbetTextSize" />
	
	        <Button
	            android:id="@+id/number6Btn"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:text="6"
	            android:textSize="@dimen/numbetTextSize" />
	
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:weightSum="3" >
	
	        <Button
	            android:id="@+id/number7Btn"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:text="7"
	            android:textSize="@dimen/numbetTextSize" />
	
	        <Button
	            android:id="@+id/number8Btn"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:text="8"
	            android:textSize="@dimen/numbetTextSize" />
	
	        <Button
	            android:id="@+id/number9Btn"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:text="9"
	            android:textSize="@dimen/numbetTextSize" />
	
	    </TableRow>
	
	    <TableRow
	        android:id="@+id/tableRow4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:weightSum="3" >
	
	        <Button
	            android:id="@+id/cancelButton"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:text="@string/cancelButton"
				android:onClick="reset"
				android:textSize="24dp"/>
	
	        <Button
	            android:id="@+id/number0Btn"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:text="0"
	            android:textSize="@dimen/numbetTextSize" />

	        <Button
	            android:id="@+id/confirmButton"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:text="@string/confirmButton"
				android:onClick="confirm"
				android:textSize="24dp"/>
	
	    </TableRow>
	
	</TableLayout>
	
</LinearLayout>
